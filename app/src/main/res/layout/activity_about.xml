<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="pl.rozen.swim.BMICalculator.activities.AboutActivity">

        <include
            android:id="@+id/toolbar_about"
            layout="@layout/toolbar_bmi" />

        <ImageView
            android:id="@+id/about_background"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@id/toolbar_about"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:contentDescription="@string/about_background_description"
            android:scaleType="centerCrop"
            android:src="@drawable/about_background" />

        <ImageView
            android:id="@+id/about_face"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_below="@id/toolbar_about"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:contentDescription="@string/about_face_description"
            android:onClick="onFaceClick"
            android:src="@drawable/face" />

        <TextView
            android:id="@+id/bmi_calculator_about_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_face"
            android:layout_marginTop="@dimen/medium_big_margin"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:id="@+id/app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmi_calculator_about_label"
            android:gravity="center"
            android:text="@string/app_version_about" />

        <TextView
            android:id="@+id/about_app_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_version"
            android:gravity="center"
            android:text="@string/about_author_info" />

        <TextView
            android:id="@+id/about_git_site_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_app_author"
            android:layout_margin="@dimen/medium_big_margin"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onGitClick"
            android:text="@string/about_github_author"
            android:textSize="@dimen/medium_text_size" />

    </RelativeLayout>
</ScrollView>
